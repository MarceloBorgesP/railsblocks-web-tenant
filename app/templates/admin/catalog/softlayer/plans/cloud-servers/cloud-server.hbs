                <span>{{model.disk_4}}</span>
              </div>
            </div>
            <div class="summary-group clearfix">
              <div class="summary-label col-sm-5">
                <span>Disk 5</span>
              </div>
              <div class="col-sm-7">
                <span>{{model.disk_5}}</span>
              </div>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <br>
    <div class="col-md-4">
      <button {{action 'save'}} id="save_bottom" class="btn btn-primary">Save options</button>
    </div>
  </div>
</div>