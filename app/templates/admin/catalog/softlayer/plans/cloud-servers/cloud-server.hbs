<div class='row wrapper backs'>
  <div class='col-lg-3 go-back'>
    {{#link-to 'admin.catalog.softlayer.plans.cloud_servers'}}
      <i class="fa fa-angle-left"></i>
      <span>Plans</span>
    {{/link-to}}
  </div>
  <div class='col-lg-5 title'>
    <span>{{model.name}}</span>
  </div>
  <div class="col-lg-4">
    <a class="btn btn-danger pull-right" {{action "delete"}} role="button"><i class="fa fa-times"></i> Delete Plan</a>
    <a class="btn btn-default pull-right mr_20" {{action 'save'}} id="save_top" role="button"><i class="fa fa-floppy-o"></i> Save</a>
  </div>
</div>
<!-- CONTENT -->
<div class='wrapper wrapper-content fix-padding-mini-dashs'>
  <div class='row'>
    <div class="col-lg-8">
      <div class="comp-s-item border-bottom clearfix">
        <div class='col-lg-4'>
          <h4>Basic information</h4>
          <small>Consectetur adipiscing. Lorem ipsum dolor sit amet elit. <a href="#" title="">Aenean ac magna.</a></small>
        </div>
        <div class="col-lg-8">
          <div class="row mb_40">
            <div class="col-lg-4">
              <span>Name</span>
            </div>
            <div class="col-lg-4">
              {{#if isEditingName }}
                {{input value=model.name id="name" class="string required form-control"}}
              {{else}}
                <span>{{model.name}}</span>
              {{/if}}
            </div>
            <div class="col-lg-4">
              {{#if isEditingName}}
                <button {{action 'doneEditingName'}} class='pull-right btn btn-default'>Done</button>
              {{else}}
                <button {{action 'editName'}} class="pull-right btn btn-default">Edit Name</button>
              {{/if}}
            </div>
          </div>
          <div class="row mt_20">
            <div class="col-lg-6 mb_20">
              {{input type="checkbox" name=model.enabled checked=model.enabled}}
              <strong class="ml_10">Enabled</strong>
            </div>
            <div class="col-lg-6">
              {{input type="checkbox" name=model.hourly checked=model.hourly}}
              <strong class="ml_10">Hourly</strong>
            </div>
          </div>
        </div>
      </div>
      
      <div class="comp-s-item border-bottom clearfix">
        <div class='col-lg-4'>
          <h4>General details</h4>
          <small>Consectetur adipiscing. Lorem ipsum dolor sit amet elit. <a href="#" title="">Aenean ac magna.</a></small>
        </div>
        <div class="col-lg-8">
          <div class="form-group">
            <form class="simple_form form-horizontal form-group string required">
              <div class="row">
                <label class="col-sm-4 string required control-label">
                  Processor
                </label>
                <div class="col-sm-7">
                  {{#x-select id="cpu-select" value=model.processor class="form-control"}}
                    {{#x-option value="1 x 2.0 GHz Core"}}1 x 2.0 GHz Core{{/x-option}}
                    {{#x-option value="2 x 2.0 GHz Core"}}2 x 2.0 GHz Core{{/x-option}}
                    {{#x-option value="4 x 2.0 GHz Core"}}4 x 2.0 GHz Core{{/x-option}}
                  {{/x-select}}
                </div>
              </div>
              <hr>
              <div class="row">
                <label class="col-sm-4 string required control-label">
                  Memory
                </label>
                <div class="col-sm-7">
                  {{#x-select id="memory-select" value=model.memory class="form-control"}}
                    {{#x-option value="1 GB"}}1 GB{{/x-option}}
                    {{#x-option value="2 GB"}}2 GB{{/x-option}}
                    {{#x-option value="8 GB"}}8 GB{{/x-option}}
                  {{/x-select}}
                </div>
              </div>
              <hr>
              <div class="row">
                <label class="col-sm-4 string required control-label">
                  Datacenter
                </label>
                <div class="col-sm-7">
                  {{#x-select id="datacenter-select" value=model.datacenter class="form-control"}}
                    {{#x-option value="Amsterdam 1"}}Amsterdam 1{{/x-option}}
                    {{#x-option value="Amsterdam 2"}}Amsterdam 2{{/x-option}}
                    {{#x-option value="Dallas 1"}}Dallas 1{{/x-option}}
                  {{/x-select}}
                </div>
              </div>
              <hr>
              <div class="row">
                <label class="col-sm-4 string required control-label">
                  Operating system
                </label>
                <div class="col-sm-7">
                  {{#x-select id="os-select" value=model.operating_system class="form-control"}}
                    {{#x-option value="CentOS - Latest"}}CentOS - Latest{{/x-option}}
                    {{#x-option value="CentOS - Latest 2"}}CentOS - Latest 2{{/x-option}}
                    {{#x-option value="CentOS - Latest 3"}}CentOS - Latest 3{{/x-option}}
                  {{/x-select}}
                </div>
              </div>
              <hr>
              <div class="row">
                <label class="col-sm-4 string required control-label">
                  Network component
                </label>
                <div class="col-sm-7">
                  {{#x-select id="network-select" value=model.network class="form-control"}}
                    {{#x-option value="10 Mbps Public & Private Network Uplinks"}}
                      10 Mbps Public & Private Network Uplinks
                    {{/x-option}}
                    {{#x-option value="100 Mbps Public & Private Network Uplinks"}}
                      100 Mbps Public & Private Network Uplinks
                    {{/x-option}}
                    {{#x-option value="1000 Mbps Public & Private Network Uplinks"}}
                      1000 Mbps Public & Private Network Uplinks
                    {{/x-option}}
                  {{/x-select}}
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>

      <div class="comp-s-item border-bottom clearfix">
        <div class='col-lg-4'>
          <h4>Disk Type</h4>
          <small>Consectetur adipiscing. Lorem ipsum dolor sit amet elit. <a href="#" title="">Aenean ac magna.</a></small>
        </div>
        <div class="col-lg-8">
          <div class="radio">
            <label>
              {{radio-button value=true checked=model.disk_san}}
