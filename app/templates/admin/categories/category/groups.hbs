<div class='row wrapper backs'>
  <div class='col-lg-3 go-back'>
    {{#link-to 'admin.categories' }}
      <i class="fa fa-angle-left"></i>
      <span>Categories</span>
    {{/link-to}}
  </div>
  <div class='col-lg-5 title'>
    <span>{{category.name}}</span>
  </div>
</div>
<div class='row wrapper backs-nav'>
  <div class='col-lg-10 col-lg-offset-1 comp-nav'>
    <div class="comp-nav-item">
      {{#link-to 'admin.categories.category' category.id}}
        <i class="fa fa-info"></i>
        <span>Information</span>
      {{/link-to}}
    </div>
    <div class="comp-nav-item">
      {{#link-to 'admin.categories.category.groups' category.id}}
        <i class="fa fa-tags"></i>
        <span>Groups</span>
      {{/link-to}}
    </div>
    <div class="comp-nav-item">
      {{#link-to 'admin.categories.category.groups.new' category.id}}
        <i class="fa fa-plus"></i>
        <span>New Group</span>
      {{/link-to}}
    </div>
  </div>
</div>
<!-- CONTENT -->
<div class='wrapper wrapper-content fix-padding-mini-dashs'>
  <div class='row'>
    <div class="col-lg-12 s-element">
      <br>
      <div class="pull-right">
        {{link-to 'New Group' 'admin.categories.category.groups.new' category.id class="btn btn-default"}}
      </div>
      <br>
      <br>
      {{#each groups as |group|}}
        <div class="s-element-item">
          <i class="fa fa-square"></i>
          {{#link-to 'admin.categories.category.groups.group' category.id group.id}}
            {{group.name}}
          {{/link-to}}
        </div>
      {{else}}
        <div class="s-element-item">
          <i class="fa fa-square"></i>
          <span>No groups yet!</span>
        </div>
      {{/each}}
    </div>
  </div>
</div>