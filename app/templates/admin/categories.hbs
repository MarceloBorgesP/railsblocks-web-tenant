<div class='row wrapper'>
  <div class='col-lg-10'>
    <h3>Listing Categories</h3>
    <ol class='breadcrumb'>
      <li>
        <a href='/'>Home</a>
      </li>
      <li>
        <a>Categories</a>
      </li>
      <li class='active'>
        <strong>Listing Categories</strong>
      </li>
    </ol>
  </div>
  <div class='col-lg-2'></div>
</div>
<!-- CONTENT -->
<div class='wrapper wrapper-content'>
  <div class='row'>
    <div class='col-lg-10 companies'>
      <div class=''>
        <h4>Categories</h4>
      </div>
      <div class="pull-right">
        {{link-to 'New Category' 'admin.categories.new' class="btn btn-default btn-inverse"}}
      </div>
      <br>
      <br>
      {{#each model as |category|}}
        <div class="companies-item">
          <i class="fa fa-square"></i>
          {{#link-to 'admin.categories.category' category}}
            {{category.name}}
          {{/link-to}}
        </div>
      {{else}}
        <div class="companies-item">
          <i class="fa fa-square"></i>
          <span>
            No categories yet!
          </span>
        </div>
      {{/each}}
    </div>
  </div>
</div>